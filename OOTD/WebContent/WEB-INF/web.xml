<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>OOTD</display-name>
  <resource-ref>
    <description>dbcp 정의</description>
    <res-ref-name>jdbc/bbsDBPool</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <context-param>
    <param-name>uploadDir</param-name>
    <param-value>upload</param-value>
  </context-param>
  <servlet>
    <servlet-name>OotdController</servlet-name>
    <servlet-class>com.ootd.project.controller.OotdController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OotdController</servlet-name>
    <url-pattern>*.mvc</url-pattern>
  </servlet-mapping>
  
</web-app>